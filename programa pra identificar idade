programa
{
//ação que inicia o programa
	
	funcao inicio()
{
 //inicia a execução do programa
		inteiro idade // variável idade do tipo inteiro

		escreva("Digite a idade: ")//texto para pedir que o usuário escreva a idade
		leia(idade)//inserir a idade

		se (idade>=18){//aqui começa a condição SE
			escreva("É de maior de idade.\n")//Texto para maior de idade
		}senao{//aqui começa a condição SENAO / OU termina a condição SE
			escreva("Menor de idade.\n")//Texto para maior de idade
		}
	}
}
